FROM python:3.9-slim-buster

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    NLTK_DATA=/nltk_data

WORKDIR /app

# Install system dependencies needed for unstructured and PDF processing
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libgomp1 \
    libmagic1 \
    poppler-utils \
    tesseract-ocr \
    libreoffice \
    pandoc \
    gcc \
    g++ \
    unzip \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir "unstructured[pdf]" "pdfminer.six==20240706"

# Manually create, download, and set permissions for NLTK data
RUN mkdir -p /nltk_data/tokenizers && \
    curl -L "https://raw.githubusercontent.com/nltk/nltk_data/gh-pages/packages/tokenizers/punkt.zip" -o "/nltk_data/tokenizers/punkt.zip" && \
    unzip "/nltk_data/tokenizers/punkt.zip" -d "/nltk_data/tokenizers/" && \
    rm "/nltk_data/tokenizers/punkt.zip" && \
    chmod -R 755 /nltk_data

COPY . .

EXPOSE 8001